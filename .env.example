# Application Settings
APP_NAME=SMTP Bridge
DEBUG=false
HOST=127.0.0.1
PORT=8000
WORKERS=4

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_TIMEOUT=30

# Security Settings
API_KEY=your-secret-api-key-here
# ALLOWED_ORIGINS can be a JSON list: ["*"] or ["http://example.com", "https://example.com"]
ALLOWED_ORIGINS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO
# LOG_FILE is optional. Leave empty for Docker (logs go to stdout)
# For file logging, specify a path like: /var/log/smtp_bridge/app.log
LOG_FILE=
